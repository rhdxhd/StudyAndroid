<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/history"
    style="@style/box"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sinhan_logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입출금"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="쏠편한 입출금통장(저축예금)" />
            </LinearLayout>

            <TextView
                android:id="@+id/account_num"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="신한 110-246-123456"
                android:textColor="#A7A7A7" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ready_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/menu_dot" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0원"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/refresh"
            app:tint="#C1C0C0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/transfer"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_corner_btn"
            android:gravity="center"
            android:text="이체"
            android:textColor="#3F8AD0"
            android:textSize="17dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/ready_2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_corner_btn"
            android:gravity="center"
            android:text="간편앱출금"
            android:textColor="#3F8AD0"
            android:textSize="17dp"
            android:textStyle="bold" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">


            <RelativeLayout
                android:id="@+id/ready_3"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:background="@drawable/round_corner_btn"
                android:backgroundTint="#F3F8FF">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:id="@+id/send1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/uri_logo" />

                <TextView
                    android:id="@+id/send1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/send1"
                    android:text="박찬영"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/send1_name"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/send1"
                    android:text="100,000"
                    android:textColor="#A7A7A7"
                    android:textSize="14dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ready_4"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_corner_btn"
                android:backgroundTint="#F3F8FF">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:id="@+id/send2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ibk_logo" />

                <TextView
                    android:id="@+id/send2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/send2"
                    android:text="박찬영"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/send2_name"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/send2"
                    android:text="100,000"
                    android:textColor="#A7A7A7"
                    android:textSize="14dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/ready_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_corner_btn"
                android:backgroundTint="#F3F8FF"
                android:gravity="center"
                android:text="+"
                android:textColor="#757778"
                android:textSize="25dp" />

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
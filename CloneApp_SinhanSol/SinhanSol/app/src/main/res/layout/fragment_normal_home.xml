<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F5FA"

    tools:context=".home.NormalHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--광고!-->
        <RelativeLayout
            android:id="@+id/ready_1"
            style="@style/box"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="광고!"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>
        <!--  내 계좌 타이틀! -->
        <RelativeLayout
            android:id="@+id/account_check"
            style="@style/box"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="내 계좌"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="전체보기  >"
                android:textColor="#006AFF"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>
        <!-- 계좌 정보 스와이프뷰! -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager2"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="10dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal" />
        <!-- 신한 하위 메뉴! -->
        <LinearLayout
            style="@style/box"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ready_2"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/round_corner_btn"
                android:backgroundTint="#EDF6FE"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/sinhan_plus_logo" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="신한플러스"
                    android:textColor="#1E91B5"
                    android:textSize="13dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/ready_3"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_corner_btn"
                android:backgroundTint="#EEF9FD"
                android:gravity="center"
                android:text="카드"
                android:textColor="#1E91B5"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ready_4"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_corner_btn"
                android:backgroundTint="#EDF4FD"
                android:gravity="center"
                android:text="증권"
                android:textColor="#3863D5"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ready_5"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_corner_btn"
                android:backgroundTint="#F3F1FB"
                android:gravity="center"
                android:text="보험"
                android:textColor="#7363BC"
                android:textSize="13dp"
                android:textStyle="bold" />

        </LinearLayout>
        <!-- 버튼 메뉴 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/ready_6"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner"
                android:backgroundTint="#FE731D"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <TextView
                    android:text="땡겨요"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/home_menu_1"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ready_7"
                android:layout_margin="10dp"
                android:background="@drawable/round_corner"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:text="대출비교/"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="갈아타기"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/home_menu_2"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ready_8"
                android:layout_margin="10dp"
                android:background="@drawable/round_corner"
                android:layout_weight="1"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:text="스토리뱅크"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text=""
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/home_menu_3"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </LinearLayout>
        <!-- 버튼 메뉴 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/ready_9"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <TextView
                    android:text="쏠 사용팁"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/home_menu_4"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ready_10"
                android:layout_margin="10dp"
                android:background="@drawable/round_corner"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:text="쏠지갑"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text=""
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/home_menu_5"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ready_11"
                android:layout_margin="10dp"
                android:background="@drawable/round_corner"
                android:layout_weight="1"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:text="쏠야구"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text=""
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/home_menu_6"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </LinearLayout>
        <!-- 버튼 메뉴 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/ready_12"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner"
                android:backgroundTint="#E0E5EB"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <ImageView
                    android:src="@drawable/home_menu_add"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:text="메뉴추가"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#8A8E95"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <View
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <!-- 하단 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="80dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ready_13"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner"
                android:backgroundTint="#E0E5EB"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/home_custom"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:text="홈화면 변경"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#8A8E95"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ready_14"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner"
                android:backgroundTint="#E0E5EB"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/home_shake"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:text="흔들기 설정"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#8A8E95"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>